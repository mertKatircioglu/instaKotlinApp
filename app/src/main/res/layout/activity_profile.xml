<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Profile.ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/profilRoot">

        <TextView
                android:text="kiwi_06"
                android:textSize="18sp"
                android:textColor="@color/siyah"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvProfilAdiToolBar"
                app:layout_constraintTop_toTopOf="@+id/imgProfilSeetings" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="@+id/imgProfilSeetings"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_profile_options"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imgProfilSeetings"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                android:contentDescription="TODO"
                tools:ignore="VectorDrawableCompat"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_discover_people"
                android:id="@+id/imageView2"
                app:layout_constraintEnd_toStartOf="@+id/imgProfilSeetings"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgProfilSeetings"
                tools:ignore="VectorDrawableCompat"/>
        <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/golgelik"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/golgelik"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="parent">

        </View>

        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/circleProfileImage"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/kivi"
                app:civ_border_width="1dp"

                app:civ_border_color="@color/golgelik"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/golgelik"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                app:layout_constraintBottom_toBottomOf="@+id/circleProfileImage"
                app:layout_constraintEnd_toEndOf="@+id/circleProfileImage"
                app:layout_constraintTop_toTopOf="@+id/circleProfileImage"
                app:layout_constraintStart_toStartOf="@+id/circleProfileImage"/>
        <TextView
                android:text="35"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textColor="@color/siyah"
                app:layout_constraintStart_toEndOf="@+id/circleProfileImage" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/textView4" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/circleProfileImage"/>
        <TextView
                android:text="12"
                android:textSize="16sp"

                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textColor="@color/siyah"

                app:layout_constraintStart_toEndOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/textView5" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/circleProfileImage"/>
        <TextView
                android:text="1453"
                android:textSize="16sp"

                android:textColor="@color/siyah"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/circleProfileImage"/>
        <TextView
                android:text="Gönderi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/textView3"/>
        <TextView
                android:text="Takipçi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="@+id/textView4" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"/>
        <TextView
                android:text="Takip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="@+id/textView5" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"/>
        <TextView
                android:text="Profil Düzenle"
                android:background="@drawable/edit_profile_button_background"
                android:padding="6dp"
                android:textColor="@color/siyah"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvProfilDuzenleButton"
                app:layout_constraintBottom_toBottomOf="@+id/circleProfileImage" android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/circleProfileImage" android:layout_marginStart="16dp"/>
        <TextView
                android:text="kiwi_06"
                android:textStyle="bold"
                android:textColor="@color/siyah"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:id="@+id/tvProfilGercekAd" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/circleProfileImage"/>
        <TextView
                android:text="4 Aylık evcil bir kuşum selamlar."
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvBiyografi"
                app:layout_constraintTop_toBottomOf="@+id/tvProfilGercekAd"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>

        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
                android:layout_width="match_parent"
                app:menu="@menu/bottom_navigation_menu"
                android:layout_height="50dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/bottomNavigationViewProfile">

        </com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx>

        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              android:id="@+id/golgelikBottom"
              android:background="@color/golgelik"
              app:layout_constraintBottom_toTopOf="@id/bottomNavigationViewProfile"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent">

        </View>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/profilContainer"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent">

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>